<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="@drawable/bgmain5"
>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:id="@+id/recycleViewMain"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
    />

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="1"
                  android:orientation="horizontal"
                  android:weightSum="10"
                  android:background="#000"
    >

        <ImageView android:layout_width="0dp" android:layout_height="match_parent"
                   android:layout_weight="2"
                   android:id="@+id/imgCoverMain"
                   android:src="@drawable/disc1"
                   android:layout_marginRight="8dp"
                   android:layout_marginTop="4dp"
                   android:layout_marginBottom="4dp"
        />

        <LinearLayout android:layout_width="0dp" android:layout_height="match_parent"
                      android:layout_weight="6"
                      android:weightSum="2"
                      android:orientation="vertical"

        >

            <TextView android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight="1"
                      android:text=""
                      android:gravity="bottom"
                      android:id="@+id/txtTitleMain"
                      android:textSize="18dp"
                      android:singleLine="true"
                      android:textColor="@color/colorSongTitle"
            />

            <TextView android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight="1"
                      android:text=""
                      android:id="@+id/txtArtistMain"
                      android:textSize="16dp"
                      android:singleLine="true"
                      android:textColor="@color/colorSongArtist"
            />


        </LinearLayout>

        <ImageButton android:layout_width="0dp" android:layout_height="match_parent"
                     android:layout_weight="2"
                     android:src="@drawable/ic_play_main"
                     android:background="@null"
                     android:layout_gravity="center"
                     android:id="@+id/btnPlayMain"
        />

    </LinearLayout>

</LinearLayout>